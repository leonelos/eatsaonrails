<h1>Listing roles</h1>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
</div>

<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @roles.each do |role| %>
    <% if role.errors.any? %>
      <h1>Hello</h1>
    <% end%>
    <tr>
      <td><%= role.name %></td>
      <td><%= link_to 'Show', role_path(role) %></td>
      <td><%= link_to 'Edit', edit_role_path(role) %></td>
      <td><%= link_to 'Destroy', role_path(role), method: :delete,  data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to 'New Role', new_role_path %>

<p><%= link_to 'Main Page', root_path %></p>